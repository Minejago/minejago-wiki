html,
body {
	@apply h-screen overflow-hidden;
	padding-bottom: env(safe-area-inset-bottom, 20px);
}

.list-nav a {
	@apply rounded-none;
}

.dark p {
	color: rgb(var(--color-surface-300) / var(--tw-text-opacity));
}

.searchDropdown {
	@apply bg-surface-300;
}

.dark .searchDropdown {
	@apply bg-surface-500;
}

.craftingRecipe {
	@apply flex flex-col lg:flex-row items-center justify-around mt-3 mb-5;
}

.textblock {
	min-width: 80vw;
}

.craftingGrid {
	display: grid;
	gap: 0.5rem;
	grid-template-columns: repeat(3, minmax(90px, 1fr));
}

.craftingGridItem {
	width: 90px;
	height: 90px;
}

.craftingGridPicture {
	width: 50px;
	height: 50px;
	image-rendering: pixelated;
}

.navSelected {
	color: rgb(var(--theme-font-color-dark));
	@apply !bg-primary-500;
}
.dark .navSelected {
	color: rgb(var(--theme-font-color-base));
}

@media (min-width: 1024px) {
	.craftingGridItem {
		width: 110px;
		height: 110px;
	}

	.craftingGridPicture {
		width: 65px;
		height: 65px;
	}

	.craftingGrid {
		grid-template-columns: repeat(3, minmax(110px, 1fr));
	}

	.textblock {
		min-width: 65ch;
	}

	.page {
		min-height: 88vh;
	}

	.craftingRecipe {
		left: 50%;
		margin-left: -25vw;
		margin-right: -50vw;
		max-width: 50vw;
		position: relative;
		right: 50%;
	}
}

.accordion-summary-lead {
	flex-shrink: 0;
}
